<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout00"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingClass">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/home2" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/heart2"/>
    </com.google.android.material.tabs.TabLayout>
    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bio_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout0"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout1"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30sp"
                android:paddingBottom="30sp"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_main_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20sp"
                    android:text="@string/main_name1"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/btnApt"
                    android:src="@drawable/apt2"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="175sp"
                    android:layout_height="100sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_main_name1"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:text="@string/main_btn1_1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/btnApt"
                    app:layout_constraintRight_toRightOf="@id/btnApt"
                    app:layout_constraintBottom_toBottomOf="@id/btnApt" />
                <ImageView
                    android:id="@+id/btnOpi"
                    android:src="@drawable/opi2"
                    android:layout_width="175sp"
                    android:layout_height="100sp"
                    app:layout_constraintLeft_toRightOf="@+id/btnApt"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:text="@string/main_btn1_2"
                    android:textStyle="bold"
                    android:textColor="#000"
                    app:layout_constraintLeft_toLeftOf="@+id/btnOpi"
                    app:layout_constraintRight_toRightOf="@+id/btnOpi"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/colorGray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout2"
                android:layout_width="350sp"
                android:layout_height="110sp"
                android:background="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                android:layout_marginTop="30sp"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_main_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20sp"
                    android:text="@string/main_name2"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/btnPlace"
                    android:layout_width="350sp"
                    android:layout_height="50sp"
                    android:background="@drawable/round_edge_btn"
                    android:drawableRight="@drawable/location"
                    android:paddingRight="20sp"
                    android:paddingLeft="20sp"
                    android:gravity="left|center"
                    android:text="@string/main_btn2_1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_main_name2"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/colorGray"
                android:layout_marginTop="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout2"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout3"
                android:layout_width="350sp"
                android:layout_height="270sp"
                android:background="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout2"
                android:layout_marginTop="60sp"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_main_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20sp"
                    android:text="@string/main_name3"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnRecommend"
                    android:layout_width="350sp"
                    android:layout_height="50sp"
                    android:background="@drawable/round_edge_btn"
                    android:drawableRight="@drawable/like"
                    android:paddingRight="20sp"
                    android:paddingLeft="20sp"
                    android:gravity="left|center"
                    android:text="@string/main_btn3_1_1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_main_name3"
                    app:layout_constraintRight_toRightOf="parent" />
                <Button
                    android:id="@+id/btnComp"
                    android:layout_width="350sp"
                    android:layout_height="50sp"
                    android:background="@drawable/round_edge_btn"
                    android:drawableRight="@drawable/trend"
                    android:paddingRight="20sp"
                    android:paddingLeft="20sp"
                    android:gravity="left|center"
                    android:layout_marginTop="20sp"
                    android:text="@string/main_btn3_2_1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/btnRecommend"
                    app:layout_constraintRight_toRightOf="parent" />
                <Button
                    android:id="@+id/btnCrime"
                    android:layout_width="350sp"
                    android:layout_height="50sp"
                    android:background="@drawable/round_edge_btn"
                    android:drawableRight="@drawable/profile"
                    android:paddingRight="20sp"
                    android:paddingLeft="20sp"
                    android:gravity="left|center"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:text="@string/main_btn3_3_1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/btnComp"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout4"
                android:layout_width="350sp"
                android:layout_height="60sp"
                android:background="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout3"
                tools:ignore="MissingConstraints">
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>